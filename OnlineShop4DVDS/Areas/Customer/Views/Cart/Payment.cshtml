@using Ultility
@model CartItemViewModel

<div class="listing-banner-part d-inline-block w-100 mb-5">
    <div class="container">
        <h2 class="text-white"> Checkout </h2>
    </div>
</div>

<div class="container mb-5">
    <div class="form-wizard">
        <form method="post" role="form">
            <fieldset class="wizard-fieldset show">
                <div class="row g-lg-5 d-flex align-items-center">
                    <div class="col-lg-8">
                        <div class="ad-fm">
                            <div class="comon-steps-div">
                                <h2 class="comon-heading m-0">User Information</h2>
                                <div class="row mt-4">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="Name">Name</label>
                                            <input asp-for="OrderItem.Name" type="text" class="form-control" id="Name" name="OrderItem.Name" value="@Model.OrderItem.Name" style="font-size: 1.1em" />
                                            <span asp-validation-for="OrderItem.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="State">State</label>
                                            <input asp-for="OrderItem.State" type="text" class="form-control" id="State" name="OrderItem.State" value="@Model.OrderItem.State" style="font-size: 1.1em" />
                                            <span asp-validation-for="OrderItem.State" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="City">City</label>
                                            <input asp-for="OrderItem.City" type="text" class="form-control" id="City" name="OrderItem.City" value="@Model.OrderItem.City" style="font-size: 1.1em" />
                                            <span asp-validation-for="OrderItem.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="PostalCode">Postal Code</label>
                                            <input asp-for="OrderItem.PostalCode" type="text" class="form-control" id="PostalCode" name="OrderItem.PostalCode" value="@Model.OrderItem.PostalCode" style="font-size: 1.1em" />
                                            <span asp-validation-for="OrderItem.PostalCode" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="PhoneNumber">Phone Number</label>
                                            <input asp-for="OrderItem.PhoneNumber" type="text" class="form-control" id="PhoneNumber" name="OrderItem.PhoneNumber" value="@Model.OrderItem.PhoneNumber" style="font-size: 1.1em" />
                                            <span asp-validation-for="OrderItem.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="StreetAddress">Street Address</label>
                                            <input asp-for="OrderItem.StreetAddress" type="text" class="form-control" id="StreetAddress" name="OrderItem.StreetAddress" value="@Model.OrderItem.StreetAddress" style="font-size: 1.1em" />
                                            <span asp-validation-for="OrderItem.StreetAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="ceck-out-right-div new-checkout">
                            <div class="d-flex justify-content-between align-items-center">
                                <h2 class="page-titel comon-heading m-0">Your Order</h2>

                            </div>

                            <div class="oder-summary-item mt-4" style="font-size: 1.1em">

                                <dl class="list-group mb-3">
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <dt class="list-group-item d-flex justify-content-between p-3">
                                            <div>
                                                <h4 class="my-1 me-5">
                                                    @switch (item.ProductType)
                                                    {
                                                        case StaticDetail.ProductType_Album:
                                                            @item.Album.Name
                                                            break;
                                                        case StaticDetail.ProductType_Movie:
                                                            @item.Movie.Name
                                                            break;
                                                        case StaticDetail.ProductType_Game:
                                                            @item.Game.Name
                                                            break;
                                                    }
                                                </h4>
                                                <small class="text-muted">Quantity: @item.Count</small>
                                            </div>
                                            <span class="text-muted"> $@item.Total </span>
                                        </dt>
                                    }
                                    <dt class="list-group-item d-flex justify-content-between bg-light">
                                        <small style="font-size: 1.1em; color: #f72457">Total</small>
                                        <strong style="color: #f72457"> $@Model.OrderItem.OrderTotal</strong>
                                    </dt>
                                </dl>
                            </div>
                        </div>
                        <div class="paymeny comon-steps-div my-5">
                            <h2 class="comon-heading m-0">Payment Method</h2>
                            <div class="d-flex align-items-center justify-content-between mt-4">
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="paymentMethod" value="PaymentCOD" class="custom-control-input" checked required>
                                    <label class="custom-control-label">
                                        Cash on Delivery
                                    </label>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4">
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="paymentMethod" value="PaymentPay" class="custom-control-input" required>
                                    <label class="custom-control-label">
                                        Credit Card Payment
                                    </label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="form-wizard-next-btn btn w-100 text-center mt-3">Pay Now</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
