@model ExternalLoginConfirmationViewModel
<div>
	<div class="card shadow border-0">
		<div class="card-header m-lg-0 py-4" style="background-color: #1d1d1d;">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="py-2 text-white">Register</h2>
					<p class="text-warning text-center pt-2">Associate your @ViewData["ProviderDisplayName"] account.</p>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<div class="row pt-3">
				<div class="col-md-12">
					<form class="row" asp-area="Customer" asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post">
						<p style="font-size: 1.1em; color: #f72457">
							You've successfully authenticated with <strong>@ViewData["ProviderDisplayName"]</strong>.
							Please enter a user name for this site below and click the Register button to finish
							logging in.
						</p>
						<div asp-validation-summary="All" class="text-danger my-2"></div>
						<input asp-for="Email" hidden />
						<div class="form-control mb-3" style="font-size: 1.1em;">
							<label class="mb-2" asp-for="Email" style="color: #97979a">Email</label>
							<p>@Model.Email</p>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-control mb-3" style="font-size: 1.1em;">
							<label class="mb-2" asp-for="Name" style="color: #97979a">Name</label>
							<input type="text" class="form-control ps-0" asp-for="Name" placeholder="Enter your full name" style="font-size: 0.8em; background-color: transparent; border: none; outline: none; box-shadow: none; focus-visible:ring-transparent;" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="col-12 text-center">
							<button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem; font-size: 1.2em; background-color: #f72457; color: white">
								Register
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
