							<li> <i class="far fa-calendar-alt"></i>  @item.PublishDate </li>
						</ul>
					</div>
					<h2 class="comon-heading mt-4"> @Html.Raw(item.Title)  </h2>
					<p>
						@Html.Raw(item.NewsContent)
					</p>
