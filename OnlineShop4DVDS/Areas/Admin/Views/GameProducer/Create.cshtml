@model GameProducer

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient py-4">
        <div class="text-center">
            <h2 class="text-white mb-0">Create Game Producer</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-area="Admin" asp-controller="GameProducer" asp-action="Create" method="post">
            <div class="border p-4 rounded">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control border-0 shadow-sm" asp-for="ProducerName" placeholder="Name" />
                    <label asp-for="ProducerName">Name</label>
                    <span asp-validation-for="ProducerName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control border-0 shadow-sm" asp-for="ContactInfo" placeholder="Contact Info" />
                    <label asp-for="ContactInfo">Contact Info</label>
                    <span asp-validation-for="ContactInfo" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-area="Admin" asp-controller="GameProducer" asp-action="Index" class="btn btn-outline-primary">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
