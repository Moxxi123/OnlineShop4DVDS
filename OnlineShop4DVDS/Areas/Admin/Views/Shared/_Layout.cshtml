@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/Asset/Admin/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="Customer" asp-controller="Home" asp-action="Index">OnlineShop4DVDS</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">

        </div>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <partial name="_LoginPartial" />
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <hr />

                        @* Đây là phần của Product *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseProduct" aria-expanded="false" aria-controls="collapseProduct">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Product Manager
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>

                        <div class="collapse" id="collapseProduct" aria-labelledby="headingProduct" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="ContentType" asp-action="Index">Content Type Manager</a>

                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAlbumManager" aria-expanded="false" aria-controls="collapseAlbumManager">
                                    Album Manager
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseAlbumManager" aria-labelledby="headingAlbumManager" data-bs-parent="#collapseProduct">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Admin" asp-controller="Artist" asp-action="Index">Artist</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="AlbumCategory" asp-action="Index">Category</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="AlbumProducer" asp-action="Index">Producer</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="Album" asp-action="Index">Album</a>
                                    </nav>
                                </div>

                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseMovieManager" aria-expanded="false" aria-controls="collapseMovieManager">
                                    Movie Manager
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseMovieManager" aria-labelledby="headingMovieManager" data-bs-parent="#collapseProduct">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Admin" asp-controller="MovieCategory" asp-action="Index">Category</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="MovieProducer" asp-action="Index">Producer</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="Movie" asp-action="Index">Movie</a>
                                    </nav>
                                </div>

                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseGameManager" aria-expanded="false" aria-controls="collapseGameManager">
                                    Game Manager
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseGameManager" aria-labelledby="headingGameManager" data-bs-parent="#collapseProduct">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Admin" asp-controller="GameCategory" asp-action="Index">Category</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="GameProducer" asp-action="Index">Producer</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="Game" asp-action="Index">Game</a>
                                    </nav>
                                </div>

                                <a class="nav-link" asp-area="Admin" asp-controller="Promotion" asp-action="Index">Promotion Manager</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">Order Manager</a>
                            </nav>
                        </div>
                        <hr />

                        @* Đây là phần của News *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseNews" aria-expanded="false" aria-controls="collapseNews">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            News Manager
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>

                        <div class="collapse" id="collapseNews" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                <a class="nav-link" asp-area="Admin" asp-controller="News" asp-action="Index">News Manager</a>
                            </nav>
                        </div>
                        <hr />

                        @* Đây là phần của Quản lý chung *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseGeneral" aria-expanded="false" aria-controls="collapseGeneral">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            General Manager
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>

                        <div class="collapse" id="collapseGeneral" aria-labelledby="headingGeneral" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAdvertisingManager" aria-expanded="false" aria-controls="collapseAdvertisingManager">
                                    Advertising Manager
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseAdvertisingManager" aria-labelledby="headingGeneral" data-bs-parent="#collapseGeneral">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Admin" asp-controller="MainBanner" asp-action="Index">Main Banner</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="RecommendSlider" asp-action="Index">Recommend Slider</a>
                                    </nav>
                                </div>

                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseFeedbackManager" aria-expanded="false" aria-controls="collapseFeedbackManager">
                                    Feedback Manager
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseFeedbackManager" aria-labelledby="headingGeneral" data-bs-parent="#collapseGeneral">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Admin" asp-controller="Review" asp-action="Index">Review</a>
                                        <a class="nav-link" asp-area="Admin" asp-controller="Feedback" asp-action="Index">Feedback</a>
                                    </nav>
                                </div>
                            </nav>
                        </div>
                        <hr />

                        @* Đây là phần của Đồ thị *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsechart" aria-expanded="false" aria-controls="collapsechart">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            Statistics
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapsechart" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                <a class="nav-link" asp-area="Admin" asp-controller="Chart" asp-action="IndexCO">
                                    <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                    Order Statistics
                                </a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Chart" asp-action="IndexCDT">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    Revenue statistics
                                </a>
                            </nav>
                        </div>
                        <hr />
                        
                        @* Đây là phần của User Login *@
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            Authentication
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>


                        <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                <a class="nav-link" asp-area="Admin" asp-controller="Role" asp-action="Index">Role Manager</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">User Manager</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Customer" asp-action="Index">Customer Manager</a>
                            </nav>
                        </div>

                        @* Về trang khách hàng *@
                        <a class="nav-link collapsed mt-4" asp-area="Customer" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-store"></i></div>
                            Back to Shop
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    @{
                        var user = await UserManager.GetUserAsync(User);
                        if (user != null)
                        {
                            var roles = await UserManager.GetRolesAsync(user);
                            if (roles.Any())
                            {
                                <span>@string.Join(", ", roles)</span>
                            }
                            else
                            {
                                <span>No Role</span>
                            }
                        }
                        else
                        {
                            <span>Not logged in</span>
                        }
                    }
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <div class="container-fluid px-5 py-3">
                <partial name="_ToastrNotification" /> @* thông báo dùng chung cho mọi trang *@
                <partial name="_SwalNotification" />
                @RenderBody()
            </div>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; OnlineShop4DVDS @DateTime.Now.Year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Asset/Admin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Asset/Admin/assets/demo/chart-area-demo.js"></script>
    <script src="~/Asset/Admin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/Asset/Admin/js/datatables-simple-demo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/js/all.min.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.0.7/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/a8xim7vbdz33esnljukqd3agdkbr98x5hncbb8mw0n2qkeey/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
